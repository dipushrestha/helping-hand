@page "/offer-help"
@inject IDialogService DialogService;
@using helping_hand.Client.Components.Dialogs

<MudText Typo="Typo.h5" Align="Align.Center">Offer Help & Reliefs</MudText>
<br />
<MudContainer MaxWidth="MaxWidth.Medium">

	<MudCard>
		<MudCardContent>
			<MudGrid>
				<MudItem xs="9" sm="9" md="9">
					<MudText Typo="Typo.body1">Help needed with <strong>Bed, Medicine</strong>.</MudText>
					<MudText Typo="Typo.body2">Address: <strong>some street</strong></MudText>
					<MudText Typo="Typo.caption">3 minutes ago.</MudText>
				</MudItem>
				<MudItem xs="3" sm="3" md="3" Style="text-align: right">
					<MudChip Color="Color.Error" Size="Size.Small">Urgent</MudChip>
				</MudItem>
				<MudItem xs="12" sm="12" md="12">
					<MudText Typo="Typo.body2">Author's note: <em>some message</em></MudText>
				</MudItem>
				<MudItem xs="12" sm="12" md="12">
					<MudFab Icon="@Icons.Material.Filled.Navigation" Label="Offer Help" Size="Size.Small" OnClick="OpenOfferHelpDialog" />		
				</MudItem>
			</MudGrid>
		</MudCardContent>
	</MudCard><br />

	<br />&nbsp;
</MudContainer>

@code {
	public List<HelpRequest> helpRequests;

	public void OpenOfferHelpDialog()
	{
		DialogService.Show<ContactDialog>();
	}

}
