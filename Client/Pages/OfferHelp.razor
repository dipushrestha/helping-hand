@page "/offer-help"
@inject HttpClient Http
@using helping_hand.Shared

<h1>Live Requests</h1>

@if (requests == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Urgency</th>
                <th>Type</th>
                <th>Name</th>
                <th>Address</th>
                <th>Requested On</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in requests)
            {
                <tr>
                    <td>@request.Urgency</td>
                    <td>@request.Type</td>
                    <td>@request.Name</td>
                    <td>@request.Address</td>
                    <td>@request.Date.ToString()</td>
                    <td><button class="btn btn-danger">Offer Help</button></td>
                </tr>
            }
        </tbody>
    </table>
}

