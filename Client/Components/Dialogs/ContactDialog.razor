<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddToQueue" Class="mr-3 mb-n1"/>
            Offer Help
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="string" Label="Name" Required="true" RequiredError="Name is required!"/>
        <MudTextField T="string" Label="Phone Number" Required="true" RequiredError="Phone Number is required!"/>
        <MudTextField T="string" Label="Address" Required="true" RequiredError="Address is required!"/>
    </DialogContent>
    <DialogActions>
        <a href="tel:9813629353">
            <MudIconButton Color="Color.Success" Icon="@Icons.Material.Filled.Call" Size="Size.Small" aria-label="Call"></MudIconButton>
        </a>
        <MudButton Color="Color.Primary" OnClick="Submit">Send</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
